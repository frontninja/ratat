---
export interface Props {
    href: string;
    isContrast?: boolean;
}

const { href, isContrast = false } = Astro.props as Props;
---

<a href="{href}" class={isContrast ? "button button--contrast" : "button"}>
    <slot />
</a>

<style>
    .button {
        border-radius: 6px;
        display: inline-flex;
        align-items: center;
        height: 60px;
        background-color: var(--color-primary);
        background-image: url("/img/ButtonWave.png");
        background-repeat: no-repeat;
        padding: 0 35px;
        color: var(--color-contrast);
        text-decoration: none;
        font-size: 17px;
        font-weight: 400;
        line-height: 20px;
        letter-spacing: 0em;
    }

    .button--contrast {
        color: var(--color-primary);
        color: var(--color-contrast);
    }
</style>
