---
import logo from "../assets/img/logo.svg";
import cart from "../assets/img/cart.svg";

const navList = [
    {
        text: "Home",
        ulr: "/home",
    },
    {
        text: "Order",
        ulr: "/order",
    },
    {
        text: "Company",
        ulr: "/company",
    },
    {
        text: "FAQ",
        ulr: "/faq",
    },
    {
        text: "Contact",
        ulr: "/contact",
    },
];
---

<header>
    <img src={logo} alt="logo" />
    <nav>
        <ul>
            {
                navList.map((navItem) => (
                    <li>
                        <a href={navItem.ulr}>{navItem.text}</a>
                    </li>
                ))
            }
        </ul>
    </nav>
</header>
<style>
    header {
        display: flex;
        align-items: center;
        height: 100px;
        padding: 0 calc(50vw - 600px);
    }
    nav {
        margin-left: auto;
    }
    nav > ul {
        display: flex;
        align-items: center;
    }

    nav > ul > li {
        list-style: none;
    }

    nav > ul > li > a {
        display: inline-block;
        text-decoration: none;
        color: var(--color-main);
        font-weight: 400;
        font-size: 15px;
        line-height: 20px;
        padding: 20px 16px;
    }

    nav > ul > li > a:is(:hover) {
        color: var(--color-primary);
    }
</style>
