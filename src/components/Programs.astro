  } */

  .program__content {
    /* padding-left: 80px; */
   
  }

  .program__content + svg {
    margin-top: 30px;
  }

  .program--disabled {
    align-items: flex-start;
    padding-left: 80px;

  }

  .programs__title {
    color: inherit;
    line-height: 52px;
  }

  .program--first {
    clip-path: polygon(0 0, 100% 0, 100% 100%, 10% 100%);
  }

  .program--second {
    color: #fff;
  }


  .program--third {
    clip-path: polygon(0 0, 90% 0, 100% 100%, 0% 100%);
    background: linear-gradient(
        128.5deg,
        rgba(255, 255, 255, 0.5) -9.21%,
        rgba(255, 255, 255, 0) 40.28%
      ),
      #c9c9c9;
      background-repeat: no-repeat;
  }

  .program__disabled-title {
    color: #888888;
    font-style: italic;
    font-weight: 700;
    font-size: 96px;
    line-height: 106px;
    text-transform: uppercase;
    margin-bottom: 10px;
  }

  .programs__subtitle {
    font-size: 24px;
    color: #888888;
    margin-bottom: 88px;
  }

  @media (max-width: 1023px) {
    .programs-section {
      padding: 100px 0px 90px;
    }
    .programs-section__title {
      padding: 0 40px;
      font-style: italic;
      font-weight: 700;
      font-size: 35px;
      line-height: 39px;
      text-align: center;
      text-transform: uppercase;
      margin-bottom: 30px;
    }
    .programs-section__link {
      font-style: normal;
      font-weight: 400;
      font-size: 22px;
      line-height: 28px;
      text-align: center;
      text-decoration-line: underline;
    }

    .programs {
      grid-template-columns: 1fr;
      grid-auto-rows: min-content;
    }

    .program {
      position: relative;
      z-index: 2;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      padding: calc(15% + 80px) 40px;
      clip-path: polygon(0 15%, 100% 0, 100% 100%, 0 85%);
    }

    .program__stars {
      justify-content: flex-start;
      align-self: flex-start;
    }


    .programs__title {
      font-style: normal;
      font-weight: 700;
      font-size: 30px;
      line-height: 33px;
      text-transform: uppercase;
    }

    .program__content {
      margin-right: 0;
    }

    .program--disabled {
      padding: 40px;
      margin-top: -50%;
      padding-top: 50%;
      clip-path: none;
      z-index: 1;
      padding-left: 80px;
      background: linear-gradient(
          128.5deg,
          rgba(255, 255, 255, 0.5) -9.21%,
          rgba(255, 255, 255, 0) 40.28%
        ),
        #c9c9c9;
    }
  }
</style>
