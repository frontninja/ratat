---
import "../assets/styles/TTMussels.css";
import "../assets/styles/global.css";
import "../../node_modules/toastr/build/toastr.css"
import "@fontsource/overpass";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Form from "../components/Form.astro";
import PaymentForm from "../components/Payment-form.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" 
    content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div id="smooth-wrapper">
      <div id="smooth-container">
        <Header />
        <slot />
        <!-- <Footer /> -->
        <div id="formModal" class="modal">
          <div class="modal-content">
            <span class="close" id="formModalClose">&times;</span>
            <Form />
          </div>
        </div>
        <div id="paymentFormModal" class="modal">
          <div class="modal-content">
            <a href="/" class="close" id="paymentFormClose">&times;</a>
            <PaymentForm />
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

<style is:global>
  #toast-container {
      padding-top: 15px;
  }
  .modal {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    justify-content: center;
    align-items: center;
    z-index: 1000; /* Sit on top */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgb(0, 0, 0); /* Fallback color */
    background-color: rgba(0, 0, 0, 0.4); /* Black w/ opacity */
  }

.modal-content {
position: relative;
}

  /* The Close Button */
  .close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
    position: absolute;
    top: 25px;
    right: 15px;
    z-index: 1000;
    text-decoration: none;
  }

  .close:hover,
  .close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
  }

  @media (max-width: 1023px) {
    .modal {
      justify-content: center;
      align-items: center;
    }
  }

  /* Add Animation */
  @keyframes animatetop {
    from {
      top: -300px;
      opacity: 0;
    }
    to {
      top: 0;
      opacity: 1;
    }
  }
</style>

<script>
  import toastr from "toastr";
  toastr.options = {
    "closeButton": true,
    "debug": false,
    "newestOnTop": false,
    "progressBar": false,
    "positionClass": "toast-top-center",
    "preventDuplicates": false,
    "onclick": null,
    "showDuration": "0",
    "hideDuration": "0",
    "timeOut": "0",
    "extendedTimeOut": "0",
    "showEasing": "swing",
    "hideEasing": "linear",
    "showMethod": "fadeIn",
    "hideMethod": "fadeOut"
  }
  var formModal = document.getElementById("formModal");
  var paymentForm = document.getElementById("paymentFormModal");

  var btns = document.querySelectorAll(".open-modal-js");

  var formModalClose: HTMLElement = document.getElementById(
    "formModalClose"
  ) as HTMLElement;

  var paymentFormClose: HTMLElement = document.getElementById(
    "paymentFormClose"
  ) as HTMLElement;

  btns.forEach((btn: HTMLElement) => {
    btn.onclick = function () {
      formModal.style.display = "flex";
    };
  });

  formModalClose.onclick = function () {
    formModal.style.display = "none";
  };

  paymentFormClose.onclick = function () {
    paymentForm.style.display = "none";
  };

  if(window.location.hash && window.location.hash === '#pay_form') {
    paymentForm.style.display = "flex";
  }

  if(window.location.hash.includes('#payment_success')) {
    toastr.success('Оплата прошла успешно')
  }

  if(window.location.hash.includes('#payment_error')) {
    toastr.error('Платеж отклонен')
  }

</script>
