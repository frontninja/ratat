---
import efim from "../assets/img/efim.png";
import otherTrainer from "../assets/img/other_trainer.png";
---

<section class="trainers-section" id="trainers">
  <h2 class="trainers-section__title">Профессиональные тренеры</h2>
  <div class="trainers">
    <figure class="main-trainer main-trainer--mobile">
      <img src={efim.src} alt="Efim" />
      <div class="main-trainer__element"></div>
      <figcaption class="main-trainer__name">Ефим Гантмахер</figcaption>
    </figure>
    <div class="other-trainers">
      <figure class="main-trainer main-trainer--desktop">
        <img src={efim.src} alt="Efim" />
        <div class="main-trainer__element"></div>
        <figcaption class="main-trainer__name">Ефим Гантмахер</figcaption>
      </figure>
      <figure class="other-trainer">
        <img src={otherTrainer.src} alt="other trainer" />
        <figcaption class="other-trainer__name">Иван Петров</figcaption>
        <p class="other-trainer__desc">Тренер начинающих</p>
      </figure>
      <figure class="other-trainer">
        <img src={otherTrainer.src} alt="other trainer" />
        <figcaption class="other-trainer__name">Иван Петров</figcaption>
        <p class="other-trainer__desc">Тренер начинающих</p>
      </figure>
      <figure class="other-trainer">
        <img src={otherTrainer.src} alt="other trainer" />
        <figcaption class="other-trainer__name">Иван Петров</figcaption>
        <p class="other-trainer__desc">Тренер начинающих</p>
      </figure>
      <figure class="other-trainer">
        <img src={otherTrainer.src} alt="other trainer" />
        <figcaption class="other-trainer__name">Иван Петров</figcaption>
        <p class="other-trainer__desc">Тренер начинающих</p>
      </figure>
      <figure class="other-trainer">
        <img src={otherTrainer.src} alt="other trainer" />
        <figcaption class="other-trainer__name">Иван Петров</figcaption>
        <p class="other-trainer__desc">Тренер начинающих</p>
      </figure>
    </div>
  </div>
</section>

<style>
  .trainers {
    padding: var(--container-padding);
    display: flex;
    /* display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px; */
  }

  .main-trainer {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    width: 100%;
    position: relative;
  }

  .trainers-section {
    max-width: 100%;
    overflow-x: hidden;
    background-position: right top;
    background-repeat: no-repeat;
    background-image: url("data:image/svg+xml,%3Csvg width='150' height='360' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M703.505.768 342.08 565.812 0 .768h703.505Z' fill='%235AAFFF'/%3E%3C/svg%3E");
  }

  .trainers-section__title {
    text-align: center;
  }

  .main-trainer > img {
    position: relative;
    width: 100%;
    z-index: 2;
  }

  .main-trainer__element {
    position: absolute;
    content: "";
    display: block;
    width: 110%;
    height: 25%;
    background: #db3549;
    z-index: 1;
    clip-path: polygon(19% 0%, 100% 0%, 81% 100%, 0% 100%);
  }

  .main-trainer__name {
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary);
    text-align: center;
    position: absolute;
    width: 80%;
    height: 50px;
    bottom: 8px;
    right: 5%;
    font-weight: 700;
    font-size: 24px;
    line-height: 30px;
    clip-path: polygon(15% 0%, 100% 0%, 85% 100%, 0% 100%);
    color: #ffffff;
  }

  section {
    padding-top: 90px;
    padding-bottom: 90px;
  }
  h2 {
    margin-bottom: 92px;
  }

  .other-trainers {
    display: flex;
    flex-wrap: wrap;
    gap: 30px;
  }

  .other-trainer {
    width: 100%;
    border: 1px solid #ebebeb;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 57.5px 0;
    width: 350px;
    flex-shrink: 0;
  }

  .other-trainer > img {
    margin-bottom: 20px;
  }

  .other-trainer__name {
    font-weight: 400;
    font-size: 24px;
    line-height: 30px;

    color: #2d2d2d;
    margin-bottom: 10px;
  }

  .other-trainer__desc {
    font-weight: 400;
    font-size: 20px;
    line-height: 25px;

    color: #2d2d2d;
  }

  .main-trainer--mobile {
        display: none;
      }
      .main-trainer--desktop {
        width: 350px
      }

  @media (max-width: 1023px) {
    .trainers-section {
      background-image: none;
    }
    .trainers {
      grid-template-columns: repeat(2, 1fr);
      gap: 25px;
    }
    .trainers-section__title {
      padding: 0 40px;
      font-style: italic;
      font-weight: 700;
      font-size: 35px;
      line-height: 39px;
      text-transform: uppercase;
      margin-bottom: 50px;
    }

    .trainers-section__title::first-line {
      font-style: italic;
      font-weight: 700;
      font-size: 25px;
      line-height: 28px;
      text-transform: uppercase;
    }

    .trainers {
      flex-direction: column;
      padding: 0 15px;
      gap: 50px;
    }

    .main-trainer__element {
      max-width: 483px;
      width: 100%;
    }

    .main-trainer {
      width: 100%;
      padding-left: 0;
    }

    @media (max-width: 767px) {

      .main-trainer--mobile {
        display: flex;
        width: 360px;
        margin: 0 auto;
      }
      .main-trainer--desktop {
        display: none;
      }
      .trainers {
        grid-template-columns: repeat(1, 1fr);
        gap: 25px;
      }

      .other-trainers {
        flex-wrap: nowrap;
        width: 100%;
        overflow-x: scroll;
      }

      .other-trainer {
        width: 300px;
      }
    }
  }
</style>
<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

  const trainersSection = document.querySelector(".trainers-section");
