---
import RedBlock from "./ui/red-block.astro";
import PlusIcon from "./ui/plus-icon.astro";
const faqList: {
  question: string;
  answer: string;
}[] = [
  {
    question: "Я только получил права, мне можно?",
    answer: "Пример текста, который раскрывается",
  },
  {
    question: "Можно отправить жену?",
    answer: "Пример текста, который раскрывается",
  },
  {
    question: "Я 20 лет вожу, чему вы меня можете научить?",
    answer: "Пример текста, который раскрывается",
  },
  {
    question: "Почему нельзя на своем авто?",
    answer: "Пример текста, который раскрывается",
  },
];
---

<section class="faq-section">
  <h2 class="faq-section__title">Частые вопросы</h2>
  <div class="faq-list">
    {
      faqList.map((item) => (
        <button  type="button" class="faq-item" x-data="{ open: false }" x-on:click="open = ! open">
          <div class="faq-item__main">
            <div class="faq-item__question"><span>{item.question} </span>
              
              <div class="faq-item__button" :class="open && 'faq-item__button--active'">
            <RedBlock>
              <PlusIcon class="faq-item__icon" />
            </RedBlock>
          </div>
              </div>
            <div class="faq-item__answer" x-show="open" x-transition>{item.answer}</div>
          </div>
        </button>
      ))
    }
  </div>
</section>

<style is:global>
    .faq-item__button {
        background: none;
        border: none;
        cursor: pointer;
    }

    .plus-icon {
        transition: all .3s ease-in-out;
    }

    .faq-item__button--active .plus-icon {
        transform: rotate(45deg);
    }
  .faq-item {
    cursor: pointer;
    text-align: left;
    padding: 15px 0;
    width: 100%;
    background: none;
    border: none;
    border-top: 1px solid #e7e7e7;
  }

  .faq-item:last-child {
    border-bottom: 1px solid #e7e7e7;
  }
  .faq-section {
    padding: var(--container-padding);
    padding-top: 90px;
    padding-bottom: 90px;
  }
  .faq-section__title {
    font-style: italic;
    font-weight: 700;
    font-size: 45px;
    line-height: 50px;
    text-align: center;
    text-transform: uppercase;
    margin-bottom: 45px;
  }

  .faq-item__question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: 400;
    font-size: 24px;
    line-height: 30px;
    color: #000000;
    width: 100%;
  }

  .faq-item__answer {
    font-style: normal;
    font-weight: 400;
    font-size: 18px;
    line-height: 23px;
    color: #8d8d8d;
    margin-top: 5px;
  }

  @media (max-width: 1023px) {
    .faq-section {
      padding: 0 40px;
    }
    .faq-item__question {
      font-weight: 400;
      font-size: 18px;
      line-height: 23px;
    }
    .faq-item__answer {
      font-weight: 400;
      font-size: 14px;
      line-height: 18px;
    }
    .faq-section__title {
      font-weight: 700;
      font-size: 35px;
      line-height: 39px;
      text-align: center;
      text-transform: uppercase;
    }
  }
</style>
