<style is:global>
  #toast-container {
      padding-top: 15px;
  }
  .modal {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    justify-content: center;
    align-items: center;
    z-index: 1000; /* Sit on top */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgb(0, 0, 0); /* Fallback color */
    background-color: rgba(0, 0, 0, 0.4); /* Black w/ opacity */
  }

.modal-content {
position: relative;
}

  /* The Close Button */
  .close {
    background: none;
    border: none;
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
    position: absolute;
    top: 25px;
    right: 15px;
    z-index: 1000;
    text-decoration: none;
  }

  .close:hover,
  .close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
  }

  @media (max-width: 1023px) {
    .modal {
      justify-content: center;
      align-items: center;
    }
  }

  /* Add Animation */
  @keyframes animatetop {
    from {
      top: -300px;
      opacity: 0;
    }
    to {
      top: 0;
      opacity: 1;
    }
  }
</style>

<script>

  import toastr from "toastr";
  toastr.options = {
    "closeButton": true,
    "debug": false,
    "newestOnTop": false,
    "progressBar": false,
    "positionClass": "toast-top-center",
    "preventDuplicates": false,
    "onclick": null,
    "showDuration": "0",
    "hideDuration": "0",
    "timeOut": "0",
    "extendedTimeOut": "0",
    "showEasing": "swing",
    "hideEasing": "linear",
    "showMethod": "fadeIn",
    "hideMethod": "fadeOut"
  }
  var formModal = document.getElementById("formModal");
  var paymentForm = document.getElementById("paymentFormModal");

  var btns = document.querySelectorAll(".open-modal-js");
  var btnsPayment = document.querySelectorAll(".open-payment-modal-js");


  var formModalClose: HTMLElement = document.getElementById(
    "formModalClose"
  ) as HTMLElement;

  var paymentFormClose: HTMLElement = document.getElementById(
    "paymentFormClose"
  ) as HTMLElement;

  const programSelect = document.getElementById('program') as HTMLSelectElement;

  btns.forEach((btn: HTMLElement) => {
    btn.onclick = function () {
      const programs = ['Safety','Skill','Drift'];
      programs.forEach(program => {
        if(btn.classList.contains(program.toLowerCase())) {
          programSelect.value = program;
        }
      });
      formModal.style.display = "flex";
    };
  });


  btnsPayment.forEach((btn: HTMLElement) => {
    btn.onclick = function () {
      paymentForm.style.display = "flex";
    };
  });

  formModalClose.onclick = function () {
    formModal.style.display = "none";
  };

  paymentFormClose.onclick = function () {
    paymentForm.style.display = "none";
  };

  if(window.location.hash && window.location.hash === '#pay_form') {
    paymentForm.style.display = "flex";
  }

  if(window.location.hash.includes('#payment_success')) {
    toastr.success('Оплата прошла успешно')
  }

  if(window.location.hash.includes('#payment_error')) {
    toastr.error('Платеж отклонен')
  }

</script>
